
<%= error_messages_for :product %>

<% form_for([:admin, @product], :html => { :multipart => true }) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :category_id %><br />
    <%= collection_select(:product, :category_id, Category.all, :id, :name, options ={:prompt => "-Select a Category"}) %>
  </p>
   <p>
    <%= f.label :group_id %><br />
    <%= collection_select(:product, :group_id, Group.all, :id, :name, options ={:prompt => "-Select a Group"}) %>
  </p>
  <p>
    <%= f.label :band_name %><br/>
    <%= f.text_field :band_name %>
  </p>
  <div id="band_links">
     <%= render :partial => 'band_link', :collection => @product.band_links %>
  </div>
  <p>
    <%= add_link_link "Add Link" %>
  </p>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :image %><br />
    <%=	f.file_field :photo %>
  </p>
  <p>
    <%= f.label :music_file %><br />
    <%=	f.file_field :music %>
  </p>
  <p>
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </p>
  <p>
    <%= f.submit "Create/Update" %>
  </p>
<% end %>

