<h1>Editing order</h1>
 <% form_for([:admin, @order]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :pay_type %><br />
    <%= f.text_field :pay_type %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', admin_order_path(@order.id) %> |
<%= link_to 'Back', admin_orders_path %>
