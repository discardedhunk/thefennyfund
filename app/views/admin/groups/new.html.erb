<div class="fennyfund-form">
<% form_for([:admin, @group]) do |f| %>
	<%= f.error_messages %>
	<fieldset> 
	<legend>Enter Group Details</legend>
	
	<div>
		<%= f.label :name %>:
		<%= f.text_field :name, :size => 40 %>
	</div>

  <div>
		<%= f.label :discount %>:
		<%= f.text_field :discount %>
	</div>

  <div>
    <%= f.label :discount_text %>:
    <%= f.text_field :discount_desc %>
  </div>
  <br/>
  <div>
    <%= f.label :description %>:
    <%= f.text_area :description %>
  </div>
	
	<div>
		<%= f.submit "Add Group", :class => "submit" %>
	</div>
	
	</fieldset>
<% end %>
	
</div>
