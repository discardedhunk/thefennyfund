<h1>Listing customers</h1>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Email</th>
    <th>Login</th>
    <th>Address</th>
  </tr>

<% for customer in @customers %>
  <tr>
    <td><%=h customer.first_name %></td>
    <td><%=h customer.last_name %></td>
    <td><%=h customer.email %></td>
    <td><%=h customer.login %></td>
    <td><%=h customer.address %></td>
    <td><%= link_to 'Show', admin_customer_path(customer) %></td>
    <td><%= link_to 'Edit', edit_admin_customer_path(customer) %></td>
    <td><%= link_to 'Destroy', admin_customer_path(customer), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

