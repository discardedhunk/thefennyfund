<div id="prod_desc_<%= product.id %>" class="facebox" style="display:none">
  <p>
    <%= product.description %><br/><br/>
    <% if product.category == "music" && product.band_links != nil %>
        <% product.band_links.each do |link| %>
          <% if link.name != nil && link.url != nil %>
            Links:<%= link_to link.name, link.url, :popup => true %>&nbsp;
          <% end %>
        <% end %>
    <% end %>
  </p>
</div>