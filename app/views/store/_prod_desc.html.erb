<div id="prod_desc_<%= product.id %>" class="popup" style="display:none">

<%= product.description %><br/><br/>
<% if product.category == "music" && product.music_file_name != nil %>
    Links:<% product.band_links.each do |link| %>
      <%= link_to link.name, link.url, :popup => true %>&nbsp;
    <% end %>
<% end %>

</div>

<%= javascript_tag "new Popup('prod_desc_#{product.id}','prod_desc_link_#{product.id}')" %>